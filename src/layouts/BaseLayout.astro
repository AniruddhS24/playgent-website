---
import '../styles/global.css';

const { title = "Playgent â€” Test Your AI Agents", description = "Simulation environments for testing AI agents" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#00E5FF" />
    <link rel="icon" type="image/svg+xml" href="/images/icondark.svg" id="favicon" />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet" />

    <meta property="og:title" content="Playgent" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/icondark.svg" />

    <!-- Prism.js for syntax highlighting -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-python.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/keep-markup/prism-keep-markup.min.js"></script>
    
    <!-- Theme initialization - runs before page renders to prevent flash -->
    <script is:inline>
      (function() {
        function getTheme() {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          // Default to dark mode
          return 'dark';
        }
        
        function updateFavicon(theme) {
          const favicon = document.getElementById('favicon');
          if (favicon) {
            favicon.href = theme === 'dark' ? '/images/icondark.svg' : '/images/iconlight.svg';
          }
        }
        
        const theme = getTheme();
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
        
        // Update favicon based on theme
        updateFavicon(theme);
        
        // Store theme for later use by scripts
        window.__theme = theme;
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>


