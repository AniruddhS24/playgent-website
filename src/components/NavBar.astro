---
const docsUrl = "https://playgent.mintlify.app";
---

<nav class="nav-pill">
  <div style="display:flex;align-items:center;justify-content:space-between;padding:18px 48px;">
    <a href="#hero" style="display:flex;align-items:center;gap:14px;font-size:22px;">
      <img src="/images/icon.png" alt="Playgent icon" width="36" height="36" />
      <span style="font-weight:700;letter-spacing:-0.02em;">Playgent</span>
    </a>
    <div class="nav-links" style="display:flex;gap:40px;align-items:center;">
      <a href="#how">Product</a>
      <a href="#pricing">Pricing</a>
      <a href={docsUrl} rel="noopener noreferrer" target="_blank" style="display:flex;align-items:center;gap:6px;">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
        Docs
      </a>
      <a href="https://playgent-dashboard.vercel.app/login" target="_blank" rel="noopener noreferrer" class="login-btn">Log In</a>
    </div>
  </div>
</nav>

<style>
  .nav-pill {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 50;
    width: calc(100% - 64px);
    max-width: 1400px;
    
    /* Pill shape */
    border-radius: 50px;
    
    /* Glass morphism effect - more transparent */
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    
    /* Subtle border */
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 
      0 8px 32px 0 rgba(0, 0, 0, 0.3),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.05);
  }
  
  .nav-pill a {
    color: var(--fg);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .nav-pill a:hover {
    color: var(--accent);
  }
  
  .nav-links a {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: 'Space Grotesk', monospace;
  }
  
  .login-btn {
    background: var(--fg);
    color: #000 !important;
    padding: 8px 24px;
    border-radius: 50px;
    transition: all 0.2s ease;
  }
  
  .login-btn:hover {
    background: var(--accent) !important;
    color: #000 !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 229, 255, 0.3);
  }
  
  @media (max-width: 768px) {
    .nav-pill {
      top: 16px;
      width: calc(100% - 32px);
    }
    
    .nav-pill > div {
      padding: 12px 24px !important;
    }
  }
</style>

