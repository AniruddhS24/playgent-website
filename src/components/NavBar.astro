---
import ThemeToggle from './ThemeToggle.astro';

const docsUrl = "https://playgent.mintlify.app";
const { showDocs = false } = Astro.props;
---

<nav class="nav-pill">
  <div class="nav-container">
    <a href="/" class="nav-logo">
      <img src="/images/logolight.svg" alt="Playgent logo" width="120" height="36" class="logo-light" />
      <img src="/images/logodark.svg" alt="Playgent logo" width="120" height="36" class="logo-dark" />
    </a>
    
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
      <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none;">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="nav-links">
      <a href="/#how">Product</a>
      <a href="/#faq">FAQ</a>
      <ThemeToggle />
      <a href="/waitlist" class="login-btn">Join Waitlist</a>
    </div>
  </div>
</nav>

<style>
  .nav-pill {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    width: 100%;
    
    /* Sharp edges - no border radius */
    border-radius: 0;
    
    /* Glass morphism effect */
    background: var(--nav-bg);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    
    /* Border only on bottom */
    border-bottom: 1px solid var(--border);
    box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.1);
  }
  
  .nav-pill a {
    color: var(--fg);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .nav-pill a:hover {
    color: var(--accent);
  }
  
  .nav-links a {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: 'Space Grotesk', monospace;
  }

  .login-btn {
    background: var(--accent);
    color: var(--btn-primary-text) !important;
    padding: 10px 24px;
    border-radius: 0;
    border: 1px solid var(--accent);
    transition: all 0.2s ease;
    font-weight: 700;
  }
  
  .login-btn:hover {
    background: transparent !important;
    color: var(--accent) !important;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px var(--ring);
  }
  
  /* Nav Container */
  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 48px;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 14px;
    font-size: 22px;
  }

  .nav-logo span {
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  /* Theme-based logo switching */
  .logo-light {
    display: block;
  }

  .logo-dark {
    display: none;
  }

  :global(.dark) .logo-light {
    display: none;
  }

  :global(.dark) .logo-dark {
    display: block;
  }

  .nav-links {
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .docs-link {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  /* Mobile Menu Button - Hidden on desktop */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--fg);
    cursor: pointer;
    padding: 8px;
  }

  @media (max-width: 768px) {
    .nav-pill {
      top: 0;
      width: 100%;
    }

    .nav-container {
      padding: 12px 16px;
      flex-wrap: wrap;
    }

    .nav-logo {
      font-size: 18px;
      gap: 10px;
    }

    .nav-logo img {
      width: 90px;
      height: 28px;
    }

    .mobile-menu-btn {
      display: block;
    }

    .nav-links {
      display: none;
      width: 100%;
      flex-direction: column;
      gap: 16px;
      padding-top: 16px;
      border-top: 1px solid var(--border);
      margin-top: 16px;
      align-items: stretch;
    }

    .nav-links.open {
      display: flex;
    }

    .login-btn {
      text-align: center;
      padding: 12px 24px;
    }
  }
</style>

<script>
  function initNavbar() {
    const menuBtn = document.querySelector('.mobile-menu-btn');
    const navLinks = document.querySelector('.nav-links');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    // Mobile menu toggle
    if (menuBtn && navLinks) {
      menuBtn.addEventListener('click', () => {
        navLinks.classList.toggle('open');
        if (menuIcon && closeIcon) {
          if (navLinks.classList.contains('open')) {
            (menuIcon as HTMLElement).style.display = 'none';
            (closeIcon as HTMLElement).style.display = 'block';
          } else {
            (menuIcon as HTMLElement).style.display = 'block';
            (closeIcon as HTMLElement).style.display = 'none';
          }
        }
      });
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavbar);
  } else {
    initNavbar();
  }

  // Re-initialize after navigation
  document.addEventListener('astro:after-swap', initNavbar);
</script>

